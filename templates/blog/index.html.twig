{% extends 'layout.html.twig' %}

{% block title %}Blog index{% endblock %}

{% block body %}
    <h1>Blog index</h1>

    <table class="table" border="1">
        <thead>
        <tr>
            <th>Id</th>
            <th>Title</th>
            <th>Description</th>
            <th>Text</th>
            <th>Category</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for blog in blogs %}
            <tr>
                <td>{{ blog.id }}</td>
                <td>{{ blog.title }}</td>
                <td>{{ blog.description }}</td>
                <td>{{ blog.text }}</td>
                <td>
                    {% if blog.category %}
                        {{ blog.category.fullName | lower }}
                    {% endif %}
                </td>
                <td>
                    <a href="{{ path('app_blog_show', {'id': blog.id}) }}" class="btn btn-primary">show</a>
                    <a href="{{ path('app_blog_edit', {'id': blog.id}) }}" class="btn btn-primary">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="row">
        <div class="col text-center">
            <a href="{{ path('app_blog_new') }}" class="btn btn-success">Create new</a>
        </div>
    </div>
{% endblock %}
