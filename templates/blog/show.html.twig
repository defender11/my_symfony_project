{% extends 'layout.html.twig' %}

{% block title %}Blog{% endblock %}

{% block body %}
    <h1>Blog</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ blog.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ blog.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ blog.description }}</td>
            </tr>
            <tr>
                <th>Text</th>
                <td>{{ blog.text }}</td>
            </tr>
            <tr>
                <th>Category</th>
                <td>
                    {% if blog.category %}
                        {{ blog.category.fullName | lower }}
                    {% endif %}
                </td>
            </tr>
        </tbody>
    </table>

    <br>
    <a href="{{ path('app_blog_index') }}" class="btn btn-warning">back to list</a>

    <a href="{{ path('app_blog_edit', {'id': blog.id}) }}" class="btn btn-primary">edit</a>

    {{ include('blog/_delete_form.html.twig') }}
{% endblock %}
